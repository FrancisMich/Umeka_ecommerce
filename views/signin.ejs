
<%- include("./partials/header") -%>
<section class="signin-page">
<div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6 signin-content">
        <h1 class="text-center mb-4">Login</h1>
        <form method="post" action="/signin">
          <div class="mb-3">
            <label for="email" class="form-label signin-form">Email</label>
            <input type="email" class="form-control signin-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label signin-form">Password</label>
            <input type="password" class="form-control signin-control" id="password" name="password" required>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary signin-button">Login</button>
          </div>
          <a class="text-center mt-3 register-link " href="./signup"> Don't have an account? Register here</a>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include("./partials/footer") -%>